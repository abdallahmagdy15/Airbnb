@model IEnumerable<IdentityRole>
@{
    ViewBag.Title = "All Roles";
}
<h1>All Roles</h1>

@if (Model.Any())
{
    <a class="btn btn-success mb-3" style="width:auto" asp-action="CreateRole">Create Role</a>
    foreach (var role in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                Role Id : @role.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@role.Name</h5>
            </div>
            <div class="card-footer">
                <a class="btn btn-primary" asp-action="EditRole" asp-route-id="@role.Id" >Edit</a>
                <a class="btn btn-danger" href="#">Delete</a>
            </div>
        </div>
    }

}
else
{
    <div class="card">
        <div class="card-header">
            No Roles Created yet
        </div>
        <div class="card-body">
            <h5 class="card-title">Do you want to create new one ?</h5>
            <a class="btn btn-success" style="width:auto" asp-action="CreateRole">Create Role</a>
        </div>
    </div>
}